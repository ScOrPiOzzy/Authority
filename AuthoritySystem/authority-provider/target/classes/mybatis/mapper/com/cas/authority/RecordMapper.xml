<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cas.authority.dao.RecordMapper">
	<resultMap id="BaseResultMap" type="com.cas.authority.model.Record">
		<!-- WARNING - @mbg.generated -->
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="date" jdbcType="VARCHAR" property="date" />
		<result column="cid" jdbcType="INTEGER" property="cid" />
		<result column="pid" jdbcType="INTEGER" property="pid" />
		<result column="type" jdbcType="INTEGER" property="type" />
		<result column="price" jdbcType="REAL" property="price" />
		<result column="eid" jdbcType="VARCHAR" property="eid" />
		<result column="debt" jdbcType="REAL" property="debt" />
		<result column="sid" jdbcType="VARCHAR" property="sid" />
		<result column="rcode" jdbcType="VARCHAR" property="rcode" />
	</resultMap>

	<resultMap id="UserRegistCodeMap" type="com.cas.authority.model.UserRegistEntity">
		<result property="username" column="code" />
		<result property="registCode" column="name" />
	</resultMap>

	<select id="selectBy" resultMap="UserRegistCodeMap">
		SELECT r.code code, u.name name
		FROM record c, user u, reg_code r
		WHERE r.rid = c.id
		AND u.id = c.cid
		AND r.code = #{arg0}
		AND u.name = #{arg1}
	</select>

	<resultMap id="recordDetailMap" type="com.cas.authority.model.RecordDetail">
		<result property="id" column="c_id" javaType="Integer" />
		<result property="date" column="c_date" javaType="java.util.Date" />
		<result property="username" column="u_name" />
		<result property="productName" column="p_name" />
		<result property="price" column="c_price" javaType="Float" />
		<result property="debt" column="c_debt" javaType="Float" />
	</resultMap>
	<select id="selectAllDetail" resultMap="recordDetailMap">
		SELECT c.id c_id, c.date c_date, u.name u_name, p.name p_name, c.type c_type, c.price c_price,
		c.debt c_debt, r.code r_code
		FROM record c, user u, reg_code r, product p
		WHERE r.rid = c.id
		AND u.id = c.cid
		AND p.id = c.pid
	</select>
	<select id="selectAll" resultType="com.cas.authority.model.Record">
		SELECT * FROM record
	</select>
</mapper>